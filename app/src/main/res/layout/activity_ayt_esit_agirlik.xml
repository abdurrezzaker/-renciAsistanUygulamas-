                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_weight="1"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/edebiyatDogruText"
                android:inputType="number"
                android:textStyle="bold"
                android:layout_weight="1"
